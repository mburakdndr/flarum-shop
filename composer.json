{
    "name": "your-vendor/flarum-marketplace",
    "description": "A marketplace extension for Flarum",
    "type": "flarum-extension",
    "require": {
        "flarum/core": "^1.0.0",
        "iyzico/iyzipay-php": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "YourVendor\\Marketplace\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Marketplace",
            "icon": {
                "name": "fas fa-store",
                "backgroundColor": "#238c59",
                "color": "#fff"
            }
        }
    }
}